{
  "name": "categories-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=development node ./bin/www",
    "build": "babel ./src -d ./dist --copy-files",
    "prebuild": "rm -rf dist/*",
    "dev": "node ./bin/www",
    "predev": "./scripts/wait-for-it.sh -h postgres -p 5432 && npm run migrate:dev",
    "faker": "babel-node database/faker",
    "db:migrate:dev": "",
    "db:migrate:test": "",
    "db:seed": "md-seed run",
    "db:seed-setup": "md-seed init",
    "pretest": "./scripts/wait-for-it.sh -h test-postgres -p 5432 && npm run migrate:test",
    "test": "./scripts/wait-for-it.sh -h test-api -p 8443 && ava --verbose",
    "test:local": "OSX=true ava --verbose",
    "test:watch": "ava --verbose --watch",
    "nsp": "nsp check"
  },
  "author": "Sean Graham sgraham785@gmail.com",
  "license": "ISC",
  "dependencies": {
    "forever-monitor": "^1.7.1",
    "grpc": "^1.4.1",
    "mongodb": "^2.2.31",
    "mongoose": "^4.11.7",
    "mongoose-data-seed": "^1.0.2"
  },
  "devDependencies": {
    "@ava/babel-preset-stage-4": "^1.1.0",
    "@ava/babel-preset-transform-test-files": "^3.0.0",
    "ava": "^0.21.0",
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-strict-mode": "^6.24.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "chance": "^1.0.10",
    "nsp": "^2.7.0",
    "standard": "^10.0.3"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2",
      "react",
      "@ava/stage-4",
      "@ava/transform-test-files"
    ],
    "sourceMaps": "inline",
    "plugins": [
      "transform-es2015-modules-commonjs",
      "transform-strict-mode",
      "transform-async-to-generator",
      "transform-object-rest-spread"
    ]
  },
  "ava": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "source": [
      "src/**/*.{js,jsx}",
      "!dist/**/*"
    ],
    "babel": "inherit"
  }
}
